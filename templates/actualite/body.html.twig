{% extends 'base.html.twig' %}
{% block body %}
	<title>Actualités</title>

	<div class="container">
		{% for n in new %}
			<div class="row text-center">
				<div class="col bg-light">
					<h1>{{n.title}}</h1>
					<p>{{ n.date|date('d-m-Y') }}</p>
					<img src="{{asset('images/Actualités/' ~ n.image)}}">
					<p>{{ n.body|raw }}</p>
				</div>
			</div>
		{% endfor %}
	</div>

{% endblock %}
